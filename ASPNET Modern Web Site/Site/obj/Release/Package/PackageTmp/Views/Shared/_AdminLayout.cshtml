            </li><!-- End Forms Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav33" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-chat-dots-fill"></i><span>Kullanıcıdan Gelenler</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav33" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/Blog/BlogYorum?id=1">
                            <i class="bi bi-circle"></i><span>Onaylanan Blog Yorumları</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Blog/BlogYorum?id=0">
                            <i class="bi bi-circle"></i><span>Onaylanmayan Blog Yorumları</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Mesaj">
                            <i class="bi bi-circle"></i><span>Site Mesajları</span>
                        </a>
                    </li>

                </ul>
            </li><!-- End Forms Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/IP">
                    <i class="bi bi-people-fill"></i>
                    <span>Siteyi Ziyaret Edenler</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Referanslar">
                    <i class="bi bi-person-video2"></i>
                    <span>Referanslarım</span>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" href="/Blog">
                    <i class="bi bi-pencil-square"></i>
                    <span>Blog Yazılarım</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Proje">
                    <i class="bi bi-motherboard"></i>
                    <span>Projelerim</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/SiteYorumlar">
                    <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i>
                    <span>Site Yorumlar</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Yetkili">
                    <i class="bi bi-person"></i>
                    <span>Adminler</span>
                </a>
            </li><!-- End Profile Page Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Home" target="_blank">
                    <i class="bi bi-browser-edge"></i>
                    <span>Siteye Geri Dön</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" href="/Admin/Logout">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Çıkış Yap</span>
                </a>
            </li>

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        @RenderBody()

    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>BugraSoft</span></strong>. Tüm Hakları Saklıdır.
        </div>

    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Content/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/Content/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/admin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/Content/admin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/Content/admin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/Content/admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/Content/admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/Content/admin/assets/vendor/php-email-form/validate.js"></script>

