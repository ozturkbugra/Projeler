    <script src="~/Content/admin/assets/js/main.js"></script>

    <script>
        $(document).ready(function () {
            var okunduDurumu = false;

            $("#markAllAsRead").on("click", function (e) {
                e.preventDefault();

                if (!okunduDurumu) {
                    okunduDurumu = true;

                    // İlk tıklamada sadece işlemleri gerçekleştir, sayfayı yenileme
                    $.ajax({
                        type: "POST",
                        url: "/Admin/MarkAllAsRead",
                        success: function (result) {
                            if (result.success) {


                            } else {
                                // Başarısızsa kullanıcıya bir hata mesajı gösterilebilir
                                alert(result.message || "İşlem tamamlanamadı.");
                            }
                        },
                        error: function () {
                            // Hata durumunda kullanıcıya bir hata mesajı gösterilebilir
                            alert("Sunucu hatası.");
                        },
                        complete: function () {
                            // İşlem tamamlandığında okunduDurumu'nu sıfırla
                            okunduDurumu = false;
                        }
                    });
                } else {
                    // İkinci tıklamada sayfayı yeniden yükle
                    location.reload();
                }
            });
        });
    </script>
