
@{
    ViewBag.Title = "Hakkımda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2>Hakkımda</h2>
            </div>

            <div class="row gy-4">
                <div class="col-lg-12">
                    <div class="content ps-0 ps-lg-5">
                        <p class="fst-italic">
                            @ViewBag.Hakkimda2.Yazi

                        </p>

                        <br>
                        <h3 class="text-center">Yaptığım projelerin özellikleri</h3> <br>
                        <ul>
                            <li>
                                <i class="bi bi-check-circle-fill"></i> Temel Ekleme Silme Güncelleme ve Listeleme Özellikleri
                            </li>
                            <li>
                                <i class="bi bi-check-circle-fill"></i> Modern sade tasarım.
                            </li>
                            <li><i class="bi bi-check-circle-fill"></i> İsteğe özel fonksiyonlar ve algoritmalar </li>
                        </ul>
                        <p>
                            Örneğin Randevu sistemi, Mesajlaşma sistemi vb...
                        </p>
                        <br>
                        <div class="">
                            <h3 class="text-center">Yeteneklerim</h3>
                            <!-- Progress Bars with Backgrounds -->
                            @foreach (var item3 in ViewBag.Yetenek2)
                            {
                                <strong>@item3.Adi</strong>
                                <div class="progress mt-3">
                                    <div class="progress-bar bg-@item3.Renk" role="progressbar" style="width: @item3.Yuzdesi%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div><br />
                            }
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </section><!-- Hakkımda Bitiş -->
</main>

