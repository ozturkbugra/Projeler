
@model List<BugraSite.Models.ProjelerView>
@{
    ViewBag.Title = "Projelerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container">
    <h2>Projelerim</h2>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#addProjeModal">
        Proje Ekle
    </button>
    <div class="container p-5">
        <table class="table table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Proje Resim</th>
                    <th>Proje Adı</th>
                    <th>Proje Türü</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.Resim1" width="100" height="100" /></td>
                        <td>@item.Ad</td>
                        <td>@item.TurAdi</td>
                        <td>
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#UpdateProjeModal"  onclick="editSelamun('@item.Id')">Düzenle</button>
                            <button class="btn btn-danger" onclick="deleteProje('@item.Id')">Sil</button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>


<div class="modal fade" id="addProjeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Proje Ekleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addProjeForm" method="post" action="@Url.Action("AddProje")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Adı</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" required />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Açıklama</label>
                        <textarea id="summernote" class="summernote" name="Aciklama" required>

    
                        </textarea>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 1 (1024x768)</label>
                                <input type="file" class="form-control" id="Resim1" name="file" required />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 2 (1024x768)</label>
                                <input type="file" class="form-control" id="Resim2" name="file1" required />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 3 (1024x768)</label>
                                <input type="file" class="form-control" id="Resim3" name="file2" required />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 4 (1024x768)</label>
                                <input type="file" class="form-control" id="Resim4" name="file3" required />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 5 (Opsiyonel)</label>
                                <input type="file" class="form-control" id="Resim5" name="file4" />
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="KullaniciResim">Resim 6 (Opsiyonel) (1024x768)</label>
                                <input type="file" class="form-control" id="Resim6" name="file5" />
                            </div>
                        </div>
                    </div>


                    <br />
                    <div class="form-group">
                        Proje Türü
                        @Html.DropDownList("Tur", ViewBag.Tur as SelectList, null, new { @class = "form-select" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Video URL'si (Kullanım Videosu)</label>
                        <input type="text" class="form-control" id="VideoURL" name="VideoURL" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Yayında Mı?</label>
                        <select id="YayindaMi" name="YayindaMi" class="form-select">
                            <option value="P">Hayır</option>
                            <option value="A">Evet</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje URL'si (Yayındaysa)</label>
                        <input type="text" class="form-control" id="ProjeURL" name="ProjeURL" />
                    </div>



                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div> <!-- End Modal Dialog Scrollable-->



<div class="modal fade" id="UpdateProjeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Proje Düzenleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="UpdateProjeForm" method="post" action="@Url.Action("UpdateProje")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" id="Id"/>
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Adı</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" required />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Açıklama</label>
                        <textarea id="Aciklama" class="summernote" name="Aciklama" required></textarea>

    
                        
                    </div>
                    <div class="form-group">
                        Proje Türü
                        @Html.DropDownList("Tur", ViewBag.Tur as SelectList, null, new { @class = "form-select" })
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Video URL'si (Kullanım Videosu)</label>
                        <input type="text" class="form-control" id="VideoURL" name="VideoURL" />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje Yayında Mı?</label>
                        <select id="YayindaMii" name="YayindaMi" class="form-select">
                            <option value="P">Hayır</option>
                            <option value="A">Evet</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="KullaniciAdi">Proje URL'si (Yayındaysa)</label>
                        <input type="text" class="form-control" id="ProjeURL" name="ProjeURL" />
                    </div>



                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div> <!-- End Modal Dialog Scrollable-->

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>


<script>
    $('.summernote').summernote({
        height: 500,
       
    });
</script>



<script>


    function deleteProje(id) {
        var confirmDelete = confirm("Projeyi Silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteProje")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }

    $(document).ready(function () {
        $('#addProjeForm').submit(function (e) {
            e.preventDefault();
            var formData = new FormData($(this)[0]);

            $.ajax({
                url: '@Url.Action("AddProje")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function () {
                    location.reload();
                }
            });
        });
    });

    function editSelamun(id) {
        $.ajax({
            url: '@Url.Action("GetProjeById")',
            type: 'GET',
            data: { id: id },
            success: function (result) {
                if (result) {
                    $('#UpdateProjeForm #Id').val(result.Id);
                    $('#UpdateProjeForm #Ad').val(result.Ad);
                    $('#UpdateProjeForm #Aciklama').summernote('code', result.Aciklama);
                    $('#UpdateProjeForm #Tur').val(result.Tur);
                    $('#UpdateProjeForm #ProjeURL').val(result.ProjeURL);
                    $('#UpdateProjeForm #VideoURL').val(result.VideoURL);
                    $('#UpdateProjeForm #YayindaMi').val(result.Yayindami);
                    $('#UpdateProjeModal').modal('show');
                }
            }
        });
    }
</script>










