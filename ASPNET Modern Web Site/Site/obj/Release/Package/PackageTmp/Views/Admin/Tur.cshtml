@model List<BugraSite.Models.Tur>
@{
    ViewBag.Title = "Proje Türü";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalDialogScrollable">
    Tür Ekle
</button>

<div class="container p-5">
    <table class="table table-striped table-hover datatable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tür Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TurAdi</td>

                    <td>
                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalDialogScrollable2" onclick="editTur('@item.Id')">Düzenle</button>
                        <button class="btn btn-danger" onclick="deleteTur('@item.Id')">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Başarılı durum için modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Başarılı İşlem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="refreshPage()" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Proje Türü Silindi</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" onclick="refreshPage()">Tamam</button>
            </div>
        </div>
    </div>
</div>

<!-- Başarısız durum için modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="errorModalLabel">Hata</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-danger">Bu tür ile proje geliştirdiniz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalDialogScrollable" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tür Ekleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="AddTurForm" method="post" action="@Url.Action("AddTur")">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="KullaniciAdi">Tür Adı</label>
                        <input type="text" class="form-control" id="TurAdi" name="TurAdi" required />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->

<div class="modal fade" id="modalDialogScrollable2" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tür Güncelleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateTurForm" method="post" action="@Url.Action("UpdateTur")">
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="Id" name="Id" />

                    <div class="form-group">
                        <label for="KullaniciAdi">Tür Adı</label>
                        <input type="text" class="form-control" id="TurAdi" name="TurAdi" required />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-warning">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->
<!-- Update Kullanici Modal -->

<script>
    function refreshPage() {
        location.reload();
    }

    $(document).ready(function () {
        $('#AddTurForm').submit(function (e) {
            e.preventDefault();
            var formData = new FormData($(this)[0]);

            $.ajax({
                url: '@Url.Action("AddTur")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function () {
                    location.reload();
                }
            });
        });
    });

    function editTur(id) {
        $.ajax({
            url: '@Url.Action("GetTurById")',
            type: 'GET',
            data: { id: id },
            success: function (result) {
                if (result) {
                    $('#updateTurForm #Id').val(result.Id);
                    $('#updateTurForm #TurAdi').val(result.TurAdi);
                    $('#updateTurModal').modal('show');
                }
            }
        });
    }

    function deleteTur(id) {
        var confirmDelete = confirm("Silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteTur")',
                type: 'POST',
                data: { id: id },
                success: function (data) {
                    if (data.success) {

                        $('#successModal').modal('show');
                    } else {
                        $('#errorModal').modal('show');
                    }
                }
            });
        }
    }
</script>
