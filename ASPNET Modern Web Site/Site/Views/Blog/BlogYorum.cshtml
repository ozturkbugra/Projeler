@model List<BugraSite.Models.BlogYorumlarView>
@{
    ViewBag.Title = "Blog Yorumları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Baslik</h2>

@if (ViewBag.Baslik == "Onaylanmayan Yorumlar")
{


    <a href="/Blog/BlogYorum/1">Onaylanan Yorumlara Git</a>}
else
{
    <a href="/Blog/BlogYorum/0">Onaylanmayan Yorumlara Git</a>
}

<div class="container p-5">
    <table class="table table-striped table-hover datatable">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Yorum</th>
                <th>Blog Adı</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AdSoyad</td>
                    <td>@item.Yorum</td>
                    <td>@item.Baslik</td>
                    <td>@item.Tarih</td>
                    @if (item.YanitVerildiMi == "e")
                    {


                        <td>Yanıtlandı</td>
                    }
                    else
                    {
                        <td>Yanıtlanmadı</td>
                    }
                    <td>
                        @if (ViewBag.Baslik == "Onaylanmayan Yorumlar")
                        {
                            <button class="btn btn-warning" onclick="editDurum('@item.Id')">Onayla</button>
                        } @if (ViewBag.Baslik != "Onaylanmayan Yorumlar" && item.YanitVerildiMi == "h")
                        {
                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addReferansModal" onclick="yanitla('@item.Id')">Yanıtla</button>
                        }

                        <button class="btn btn-danger" onclick="deleteYorum('@item.Id')">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="addReferansModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yanıt ver</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addReferansForm" method="post" action="@Url.Action("Yanitla")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Id" id="Id" />
                    <div class="form-group">
                        <label for="Yorum">Yanıt</label>
                        <input type="text" class="form-control" id="Yorum" name="Yorum" required />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteYorum(id) {
        var confirmDelete = confirm("Yorumu Silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteBlogYorumlar")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }

    function editDurum(id) {
        var confirmApprove = confirm("Yorumu Onaylamak istediğinize emin misiniz?");
        if (confirmApprove) {
            $.ajax({
                url: '@Url.Action("ApproveBlogComment")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }

    function yanitla(id) {
        $('#Id').val(id);
    }
</script>
