@model List<BugraSite.Models.BloglarView>

@{
    ViewBag.Title = "Bloglarım";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <h2>Bloglarım</h2>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#addBlogModal">
        Blog Ekle
    </button>
    <div class="container p-5">
        <table class="table table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Blog Resim</th>
                    <th>Blog Başlık</th>
                    <th>Blog Tarih</th>
                    <th>Blog Kategori</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.Resim" width="100" height="100" /></td>
                        <td>@item.Baslik</td>
                        <td>@item.Tarih.ToString("d")</td>
                        <td>@item.Ad</td>

                        <td>
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#updateBlogModal" onclick="editBlog('@item.Id')">Düzenle</button>
                            <button class="btn btn-danger" onclick="deleteBlog('@item.Id')">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<div class="modal fade" id="addBlogModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Blog Ekleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addBlogForm" method="post" action="@Url.Action("AddReferans")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="KullaniciAdi">Başlık</label>
                        <input type="text" class="form-control" id="Baslik" name="Baslik" required />
                    </div>

                    <div class="form-group">
                        <label for="KullaniciAdi">Açıklama</label>

                        <textarea id="summernote"  class="summernote" name="Aciklama" required></textarea>

                    </div>

                    <div class="form-group">
                        <label for="KullaniciResim">Blog Resim (1024x768)</label>
                        <input type="file" class="form-control" id="Resim" name="file" required />
                    </div>
                    <br />
                    <div class="form-group">
                        Blog Kategori
                        @Html.DropDownList("Kategori", ViewBag.Kategori as SelectList, null, new { @class = "form-select" })
                    </div>

                    <input type="hidden" id="Click" name="Click" value="0" />
                   
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->


<div class="modal fade" id="updateBlogModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Blog Güncelleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="EditBlogForm" method="post" action="@Url.Action("UpdateBlog")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Id" name="Id" />
                    <div class="form-group">
                        <label for="KullaniciAdi">Başlık</label>
                        <input type="text" class="form-control" id="Baslik" name="Baslik" required />
                    </div>

                    <div class="form-group">
                        <label for="KullaniciAdi">Açıklama</label>

                        <textarea id="Aciklama" class="summernote" name="Aciklama" required></textarea>

                    </div>

                    <div class="form-group">
                        <label for="KullaniciResim">Blog Resim (1024x768)</label>
                        <input type="file" class="form-control" id="Resim" name="file"/>
                    </div>
                    <br />
                    <div class="form-group">
                        Blog Kategori
                        @Html.DropDownList("Kategori", ViewBag.Kategori as SelectList, null, new { @class = "form-control" })
                    </div>

                    <input type="hidden" id="Click" name="Click" value="0" />

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </div>
                </form>
               
            </div>

        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->



<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>


<script>
    $('.summernote').summernote({

        height: 500,
      
    });
</script>



<script>
    function editBlog(id) {
        $.ajax({
            url: '@Url.Action("GetBlogById")',
            type: 'GET',
            data: { id: id },
            success: function (result) {
                if (result) {
                    $('#EditBlogForm #Id').val(result.Id);
                    $('#EditBlogForm #Baslik').val(result.Baslik);
                    $('#EditBlogForm #Aciklama').summernote('code', result.Aciklama);
                    $('#EditBlogForm #Kategori').val(result.Kategori);
                    $('#updateBlogModal').modal('show');
                }
            }
        });
    }

    function deleteBlog(id) {
        var confirmDelete = confirm("Blogu Silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteBlog")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }

    $(document).ready(function () {
        $('#addBlogForm').submit(function (e) {
            e.preventDefault();
            var formData = new FormData($(this)[0]);

            $.ajax({
                url: '@Url.Action("AddBlog")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function () {
                    location.reload();
                }
            });
        });
    });
</script>






