@model List<BugraSite.Models.Yorumlar>
@{
    ViewBag.Title = "Site Yorumlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <h2>Site Yorumları</h2>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#EkleModal">
        Yorum Ekle
    </button>
    <div class="container p-5">
        <table class="table table-striped table-hover datatable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Resim</th>
                    <th>Ad</th>
                    <th>Unvan (Yetki)</th>
                    <th>Yorum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.Resim" width="100" height="100" /></td>
                        <td>@item.Ad</td>
                        <td>@item.Unvan</td>
                        <td>@item.Aciklama</td>

                        <td>
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#GuncelleModal" onclick="YorumGuncelle('@item.Id')">Düzenle</button>
                            <button class="btn btn-danger" onclick="YorumSil('@item.Id')">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<div class="modal fade" id="EkleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorum Ekleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="EkleForm" method="post" action="@Url.Action("AddYorum")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="KullaniciAdi">Ad Soyad</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" required />
                    </div>

                    <div class="form-group">
                        <label for="KullaniciResim">Resim (400x400)</label>
                        <input type="file" class="form-control" id="Resim" name="Resim" required />
                    </div>


                    <div class="form-group">
                        <label for="KullaniciAdi">Unvan (Yetki)</label>
                        <input type="text" class="form-control" id="Unvan" name="Unvan" required />
                    </div>


                    <div class="form-group">
                        <label for="KullaniciAdi">Yorum</label>
                        <input type="text" class="form-control" id="Aciklama" name="Aciklama" required />
                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->


<div class="modal fade" id="GuncelleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yoruö Güncelleme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="GuncelleForm" method="post" action="@Url.Action("UpdateYorum")" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="Id" name="Id" />
                    
                    <div class="form-group">
                        <label for="KullaniciAdi">Ad Soyad</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" required />
                    </div>

                    <div class="form-group">
                        <label for="KullaniciResim">Resim (400x400)</label>
                        <input type="file" class="form-control" id="Resim" name="Resim"  />
                    </div>


                    <div class="form-group">
                        <label for="KullaniciAdi">Unvan (Yetki)</label>
                        <input type="text" class="form-control" id="Unvan" name="Unvan" required />
                    </div>


                    <div class="form-group">
                        <label for="KullaniciAdi">Yorum</label>
                        <input type="text" class="form-control" id="Aciklama" name="Aciklama" required />
                    </div>


                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Çıkış</button>
                        <button type="submit" class="btn btn-success">Güncelle</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div><!-- End Modal Dialog Scrollable-->


<script>
    function YorumGuncelle(id) {
        $.ajax({
            url: '@Url.Action("GetYorumById")',
            type: 'GET',
            data: { id: id },
            success: function (result) {
                if (result) {
                    $('#GuncelleForm #Id').val(result.Id);
                    $('#GuncelleForm #Ad').val(result.Ad);
                    $('#GuncelleForm #Aciklama').val(result.Aciklama);
                    $('#GuncelleForm #Unvan').val(result.Unvan);
                    $('#GuncelleModal').modal('show');
                }
            }
        });
    }

    function YorumSil(id) {
        var confirmDelete = confirm("Yorumu silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteYorum")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }

    $(document).ready(function () {
        $('#EkleForm').submit(function (e) {
            e.preventDefault();
            var formData = new FormData($(this)[0]);

            $.ajax({
                url: '@Url.Action("AddYorum")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function () {
                    location.reload();
                }
            });
        });
    });
</script>

