
@{
    ViewBag.Title = "Projelerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
 


    <section id="portfolio" class="portfolio sections-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2>Projelerim</h2>
                <p>Masaüstü ve Web tabanlı olarak yaptığım projeler</p> <br />
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-xs-12"></div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="blog">
                            <div class="sidebar">
                                <div class="sidebar-item search-form">
                                    <h3 class="sidebar-title">Ara</h3>
                                    <form action="/Home/Projelerim" method="get" class="mt-3">
                                        <input type="text" name="q">
                                        <button type="submit"><i class="bi bi-search"></i></button>
                                    </form>
                                </div><!-- End sidebar search formn-->

                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-xs-12"></div>
                </div>
            </div>

            <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry"
                 data-portfolio-sort="original-order" data-aos="fade-up" data-aos-delay="100">

                <div>
                    <ul class="portfolio-flters">
                        <li data-filter="*" class="filter-active">Tümü</li>
                        @foreach (var item in ViewBag.ProjeTur)
                        {
                    <li data-filter=".filter-@item.TurAdi">@item.TurAdi</li>
                        }

                       
                    </ul><!-- End Portfolio Filters -->
                </div>

                <div class="row gy-4 portfolio-container">
                    @foreach (var item in ViewBag.Projeler)
                    {
                        <div class="col-xl-4 col-md-6 portfolio-item filter-@item.TurAdi">
                            <div class="portfolio-wrap">
                                <a href="@item.Resim1" data-gallery="portfolio-gallery-app" class="glightbox">
                                    <img src="@item.Resim1" class="img-fluid" alt="">
                                </a>
                                <div class="portfolio-info">
                                    <h4><a href="/Home/ProjeDetay?id=@item.Id" title="More Details">@item.Ad </a></h4>
                                    <p>@Html.Raw(item.Aciklama.Substring(0,80))...<a href="/Home/ProjeDetay?id=@item.Id">Devamını oku</a></p>
                                    <br>
                                    @if (item.VideoURL != null)
                                    {
                                        <div align="center">
                                            Kullanım Videosu <br>
                                            <a href="@item.VideoURL" class="glightbox play-btn"></a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div align="center" style="visibility:hidden">
                                            Kullanım Videosu <br>
                                            <a href="@item.VideoURL" class="glightbox play-btn"></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div><!-- End Portfolio Item -->
                    }




                </div>

                </div>

            </div>
    </section><!-- Projeler Bitiş -->
</main>

