@{
    ViewBag.Title = "Ana Sayfa";
}

<button id="hiddenButton" data-bs-toggle="modal" data-bs-target="#asdfgh" style="display: none;"></button>

<!-- Hoş gelndiniz mesajı -->
<div class="modal fade" id="asdfgh" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="successModalLabel">Merhaba, sitemize hoş geldin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-dark">
                <h4>Size Yardımcı Olabileceğimiz Konular:</h4>
                <p class="text-dark">
                    <ol>
                        <li> Firmanıza ait her türlü web sitesi  </li>
                        <li> Kullanıcıyla etkileşime geçebilecek randevulu web siteleri </li>
                        <li> Uygun fiyatlara basit öğrenci projesi (Masaüstü, Web, Mobil (Basit)) </li>
                        <li> Basit Muhasebe programı </li>
                        <li> Apartman Aidat Programı </li>
                        <li> Yapılacaklar Listesi Programı </li>
                        <li> İsteğe özel masaüstü uygulaması </li>
                    </ol>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // ViewBag.a değerini doğrudan JavaScript ifadesine dönüştür
        var isViewBagATruthy = @Html.Raw(Json.Encode(ViewBag.a));

        // Gizli butonu bul
        var hiddenButton = document.getElementById('hiddenButton');

        // hiddenButton var mı ve ViewBag.a true mu kontrol et
        if (hiddenButton && isViewBagATruthy) {
            // Gizli butona programlı bir şekilde tıkla
            hiddenButton.click();
        }
    });

    document.getElementById('hiddenButton').addEventListener('click', function () {
        // Modalı açmak için gerekli kod
        $('#asdfgh').modal('show');
    });
</script>


