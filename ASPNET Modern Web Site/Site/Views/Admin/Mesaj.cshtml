@model List<BugraSite.Models.Mesajlar>
@{
    ViewBag.Title = "Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesajlar</h2>

<div class="container p-5">
    <table class="table table-striped table-hover datatable">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Mail</th>
                <th>Tel</th>
                <th>Konu</th>
                <th>Mesaj</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AdSoyad</td>
                    <td>@item.Mail</td>
                    <td>@item.Tel</td>
                    <td>@item.Konu</td>
                    <td>@item.Mesaj</td>
                    <td>@item.Tarih</td>
                    <td>
                        <button class="btn btn-danger" onclick="deleteasdf('@item.Id')">Sil</button>
                        <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#mesajDetayModal_@item.Id">Detaylar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (var item in Model)
{
    <!-- Detay Modal -->
    <div class="modal fade" id="mesajDetayModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="mesajDetayModalLabel_@item.Id" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mesajDetayModalLabel_@item.Id">Mesaj Detayları</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><strong>Ad Soyad:</strong> @item.AdSoyad</p>
                    <p><strong>Mail:</strong> @item.Mail</p>
                    <p><strong>Tel:</strong> @item.Tel</p>
                    <p><strong>Konu:</strong> @item.Konu</p>
                    <p><strong>Mesaj:</strong> @item.Mesaj</p>
                    <p><strong>Tarih:</strong> @item.Tarih</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function detay(id) {
        $.ajax({
            url: '@Url.Action("GetMesajDetail")', // GetMesajDetail eylemini tanımlayın
            type: 'GET',
            data: { id: id },
            success: function (data) {
                $('#mesajDetayModal_' + id).html(data);
                $('#mesajDetayModal_' + id).modal('show');
            }
        });
    }

    function deleteasdf(id) {
        var confirmDelete = confirm("Yorumu Silmek istediğinize emin misiniz?");
        if (confirmDelete) {
            $.ajax({
                url: '@Url.Action("DeleteMesajlar")',
                type: 'POST',
                data: { id: id },
                success: function () {
                    location.reload();
                }
            });
        }
    }
</script>
