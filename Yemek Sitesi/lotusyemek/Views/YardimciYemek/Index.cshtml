@model IEnumerable<lotusyemek.Models.TblYemek3>

@{
    ViewBag.Title = "Yardımcı Yemekler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yardımcı Yemekler</h2>

<p>
    <a href="/YardimciYemek/Create" class="btn btn-outline-success">Ekle</a>
</p>
<table class="table table-striped table-hover datatable">
    <thead>
        <tr>
            <th>
                Ad
            </th>
            <th>
                Resim
            </th>
            <th>
                Açıklama
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ad)
                </td>
                <td>
                    <img src="@item.resim" width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aciklama)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.ID, }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </tbody>
</table>
    