@model IEnumerable<lotusyemek.Models.MenuView>

@{
    ViewBag.Title = "Yemek Menülerimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<br />
<br />
<br />
<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-header">

            <p>1 Aylık Yemek Menümüz</p>
        </div>

        <div class="row gy-4">

            <table class="table table-striped text-center table-hover">
                <thead>
                    <tr>
                      
                        <th>Tarih</th>
                        <th>Yemek</th>


                    </tr>
                </thead>

                <tbody>

                   @foreach (var item in Model)
                   {
                    <tr>
                       
                        <td>@item.tarih.Value.ToString("dd/MM/yyyy")</td>
                        <td>
                            <img src="@item.Yemek_1_Resim" width="100" height="100" /> <img src="@item.Yemek_2_Resim" width="100" height="100" />
                            <img src="@item.Yemek_3_Resim" width="100" height="100" /> <img src="@item.Yemek_4_Resim" width="100" height="100" /> <br /><br />
                            @item.Yemek_1_Ad , @item.Yemek_2_Ad, @item.Yemek_3_Ad ,@item.Yemek_4_Ad
                        </td>
                    </tr>
                   }

                        

                        
                    
                </tbody>
            </table>
        </div>

    </div>
</section><!-- End About Section -->
