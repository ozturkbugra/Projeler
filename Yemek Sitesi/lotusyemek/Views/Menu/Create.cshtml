@model lotusyemek.Models.TblMenu

@{
    ViewBag.Title = "Menü Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Menü Ekle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Çorba
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.yemek1, (IEnumerable<SelectListItem>)ViewBag.YemekSecenekleri, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.yemek1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Ana Yemek
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.yemek2, (IEnumerable<SelectListItem>)ViewBag.YemekSecenekleri2, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.yemek2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Yardımcı Yemek
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.yemek3, (IEnumerable<SelectListItem>)ViewBag.YemekSecenekleri3, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.yemek3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Soğuk Yemek
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.yemek4, (IEnumerable<SelectListItem>)ViewBag.YemekSecenekleri4, null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.yemek4, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           Tarih
            <div class="col-md-10">
                @Html.EditorFor(model => model.tarih, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.tarih, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Geri Dön", "Index")
</div>
