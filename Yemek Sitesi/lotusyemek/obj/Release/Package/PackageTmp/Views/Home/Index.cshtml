                        <h3>Mail</h3>
                        <p>yemek@lotusyemek.com</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item  d-flex align-items-center">
                    <a href="tel:+905454057434"> <i class="icon bi bi-telephone flex-shrink-0"></i></a>
                    <div>
                        <h3>Telefon</h3>
                        <p>05454057434</p>
                    </div>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-6">
                <div class="info-item  d-flex align-items-center">
                    <i class="icon bi bi-share flex-shrink-0"></i>
                    <div>
                        <h3>Açık Olduğumuz Günler</h3>
                        <div>
                            <strong>Pazartesi-Cumartesi arası</strong> 07:00 - 17:00
                            <strong>Pazar:</strong> Kapalıyız
                        </div>
                    </div>
                </div>
            </div><!-- End Info Item -->

        </div>

        <form action="/Home/Create" method="post" role="form" class="p-3 p-md-4" id="mesaj">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-xl-6 form-group">
                    <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Adınız Soyadınız" required>
                </div>
                <div class="col-xl-6 form-group">
                    <input type="email" class="form-control" name="mail" id="email" placeholder="Mailiniz (Zorunlu Değil)">
                </div>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="tel" id="subject" placeholder="Telefon Numaranız" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="aciklama" rows="5" placeholder="Mesajınız" required></textarea>
            </div>
            <input type="hidden" value="1" name="durum" />
            <div class="text-center"><button type="submit">Gönder</button></div>
        </form><!--End Contact Form -->

    </div>
</section><!-- End Contact Section -->
