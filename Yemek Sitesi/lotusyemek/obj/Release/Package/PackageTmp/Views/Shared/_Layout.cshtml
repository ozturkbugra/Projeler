    <style>
        #mesaj {
            width: 100%;
            margin-top: 30px;
            background: #fff;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.08);
        }

            #mesaj .form-group {
                padding-bottom: 20px;
            }

            #mesaj #error-message {
                display: none;
                color: #fff;
                background: #df1529;
                text-align: left;
                padding: 15px;
                font-weight: 600;
            }

                #mesaj #error-message br + br {
                    margin-top: 25px;
                }

            #mesaj #sent-message {
                display: none;
                color: #fff;
                background: #059652;
                text-align: center;
                padding: 15px;
                font-weight: 600;
            }

            #mesaj .loading {
                display: none;
                background: #fff;
                text-align: center;
                padding: 15px;
            }

                #mesaj .loading:before {
                    content: "";
                    display: inline-block;
                    border-radius: 50%;
                    width: 24px;
                    height: 24px;
                    margin: 0 10px -6px 0;
                    border: 3px solid #059652;
                    border-top-color: #fff;
                    animation: animate-loading 1s linear infinite;
                }

            #mesaj input,
            #mesaj textarea {
                border-radius: 0;
                box-shadow: none;
                font-size: 14px;
            }

                #mesaj input:focus,
                #mesaj textarea:focus {
                    border-color: var(--color-primary);
                }

            #mesaj input {
                height: 48px;
            }

            #mesaj textarea {
                padding: 10px 12px;
            }

            #mesaj button[type=submit] {
                background: var(--color-primary);
                border: 0;
                padding: 12px 40px;
                color: #fff;
                transition: 0.4s;
                border-radius: 50px;
            }

                #mesaj button[type=submit]:hover {
                    background: #ec2727;
                }
    </style>
    
