@model IEnumerable<lotusyemek.Models.MenuView>

@{
    ViewBag.Title = "Menüler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Menü</h2>

<p>
    <a href="/Menu/Create" class="btn btn-outline-success">Ekle</a>
</p>
<table class="table table-striped table-hover datatable">
    <thead>
        <tr>
            <th>
                Çorba
            </th>
            <th>
                Ana Yemek
            </th>
            <th>
                Yardımcı Yemek
            </th>
            <th>
                Soğuk Yemek
            </th>
            <th>
                Tarih
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Yemek_1_Resim" width="50" height="50" />
                    <br />
                    @item.Yemek_1_Ad
                </td>
                <td>
                    <img src="@item.Yemek_2_Resim" width="50" height="50" />
                    <br />
                    @item.Yemek_2_Ad
                </td>
                <td>
                    <img src="@item.Yemek_3_Resim" width="50" height="50" />
                    <br />
                    @item.Yemek_3_Ad
                </td>
                <td>
                    <img src="@item.Yemek_4_Resim" width="50" height="50" />
                    <br />
                    @item.Yemek_4_Ad
                </td>
                <td>
                    @item.tarih.Value.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Menü_No }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Menü_No }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Menü_No }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
